<div class="card shadow">
    <div class="card-header">
        <h3>Page To Edit Item</h3>
    </div>
    <div class="card-body">
        <form action="/admin/item?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" id="title" value="<%= item.title %>" >
                <input type="hidden" name="id"  value="<%= item._id %>" >
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" name="price" class="form-control" id="price" value="<%= item.price %>">
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" name="city" class="form-control" id="city" value="<%= item.city %>">
            </div>
            <div class="form-group">
                <label for="categoryId">Category ID</label>
                <select name="categoryId" id="categoryId" class="form-control">
                    <option value="" disabled hidden selected>-- Select Ctegory --</option>
                    <% for(let i=0; i<category.length; i++){ %>
                        <option <%= item.categoryId == category[i].id?"selected":"" %> value="<%=category[i].id %>"><%=category[i].name %></option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" multiple  class="form-control" id="image" >
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" cols="30" rows="3" class="form-control"><%= item.description %></textarea>
            </div>
            <a href="/admin/item" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Edit</button>
    </form>
    
    </div>
</div>