<div class="tab-pane fade show active mt-3" id="show-item" role="tabpanel" aria-labelledby="item-tab">
    <div class="table-responsive">
        <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr class="text-center">
                    <th>No</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr class="text-center"> 
                    <th>No</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody>
              <% for(let i=0; i < item.length; i++){ %>
                <tr class="text-center">
                    <td><%= i+1 %></td>
                    <td><%= item[i].title %></td>
                    <td><%= item[i].price %></td>
                    <td><%= item[i].country %></td>
                    <td><%= item[i].city %></td>
                    <td>
                        <a class="btn btn-info btn-sm" href="/admin/item/showImage/<%= item[i]._id %>"><i class="fas fa-image"></i></a>
                        <a href="/admin/item/editPage/<%= item[i]._id %>" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                        <button id="btn-delete" data-id="<%= item[i]._id %>" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                        <a href="/admin/item/show-detail-item/<%= item[i]._id%>/feature" class="btn btn-warning btn-sm"><i class="fa fa-info"></i></a>
                    </td>
                </tr>
              <% } %>
            </tbody>
        </table>
    </div>
</div>
