<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr class="text-center">
                <th>No</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot>
            <tr class="text-center">
                <th>No</th>
                <th>Nama</th>
                <th>Action</th>
            </tr>
        </tfoot>
        <tbody>
            <% for(let i = 0; i < dataCategory.length; i++){ %>
                <tr>
                    <td class="text-center"><%= i+1 %></td>
                    <td class="text-center"><%= dataCategory[i].name %></td>
                    <td class="text-center">
                        <form action="/admin/category?id=<%= dataCategory[i].id %>&_method=DELETE" method="POST">
                            <button type="button" id="btn-edit" data-id="<%= dataCategory[i]._id %>" data-name="<%= dataCategory[i].name %>" class="btn btn-info btn-sm btn-circle"><i class="fa fa-edit"></i></button>
                            <button type="submit" class="btn btn-danger btn-sm btn-circle"><i class="fa fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>